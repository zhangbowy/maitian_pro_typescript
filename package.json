{
  "name": "dcpool-api",
  "version": "1.0.0",
  "description": "dcpool-api",
  "scripts": {
    "start": "npm run tsc && egg-scripts start",
    "dev": "egg-bin dev",
    "tsc": "ets && tsc -p tsconfig.json",
    "clean": "ets clean",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "tslint --fix 'app/**/*{.ts,tsx}'",
    "ci": "npm run lint && npm run cov",
    "debug": "egg-bin debug",
    "prod": "EGG_SERVER_ENV=prod npm start"
  },
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix 'app/**/*{.ts,tsx}'",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^3.3.0",
    "@types/ioredis": "^4.0.6",
    "dayjs": "^1.10.7",
    "egg": "^2.6.0",
    "egg-cors": "^2.2.3",
    "egg-jwt": "^3.1.7",
    "egg-redis": "^2.4.0",
    "egg-scripts": "^2.0.0",
    "egg-sequelize": "^5.2.1",
    "egg-ts-helper": "^1.25.0",
    "egg-validate": "^2.0.2",
    "koa2-ratelimit": "^0.9.0",
    "lru-cache": "^6.0.0",
    "moment": "^2.20.1",
    "mysql2": "^2.3.0",
    "prisma-lrucache-middleware": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.7.0",
    "tslib": "^1.8.1",
    "uuid": "^3.2.1",
    "typescript": "4.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/koa2-ratelimit": "^0.9.1",
    "@types/mocha": "^2.2.40",
    "@types/mockjs": "^1.0.0",
    "@types/node": "^8.5.2",
    "@types/power-assert": "^1.4.29",
    "@types/supertest": "^2.0.0",
    "@types/uuid": "^3.4.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "egg-bin": "^4.3.7",
    "egg-mock": "^3.26.0",
    "husky": "^4.3.0",
    "lint-staged": "^11.2.6",
    "mocha": "^4.1.0",
    "prisma": "^3.3.0",
    "trash-cli": "^1.4.0",
    "ts-loader": "^3.2.0",
    "tslint": "^6.1.3",
    "tslint-config-egg": "^1.0.0"
  },
  "author": ""
}
